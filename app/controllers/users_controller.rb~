# encoding: utf-8
class UsersController < ApplicationController
  before_filter :authenticate, :only => [:index, :edit, :update]
  before_filter :correct_user, :only => [:edit, :update]
  before_filter :admin_user,     :only => :destroy

  def index
    @titre = "Tous les utilisateurs"
    @users = User.paginate(:page => params[:page])
  end
 
  def destroy
    User.find(params[:id]).destroy
    flash[:success] = "User deleted"
    redirect_to users_url
  end

  def show
  	@user = User.find(params[:id])
	@titre = @user.nom
  end 

  def new
	@user = User.new
	@titre = "Inscription"
  end

  def upload
    uploaded_cv = params[:q]
    @user = User.find(params['user_id'])
    if !uploaded_cv.nil?
	    filename=@user.nom+'_'+@user.id.to_s+'.pdf'
	    File.open(Rails.root.join('public','cv',filename), 'wb') do |file|
	      file.write(uploaded_cv.read)
	    end
	    @user.update_column(:cv, filename )
            flash[:success] = "CV modifié"
	    redirect_to @user
    else
	    flash[:error] = "Séléctionné un fichier !" 
    	    redirect_to @user
    end
  end

  def update_nbr_films
	nbr=params[:nbr]
	@user = User.find(params['user_id'])
	if nbr =~ /\A[-+]?[0-9]*\.?[0-9]+\Z/
	    @user.update_column(:films_vu_par_semaine, nbr )
            flash[:success] = "Nombre de films vu par semaine est "+nbr.to_s
	    redirect_to @user	
	else 
	    flash[:error] = "Le Numobre doit être un entier" 
    	    redirect_to @user
	end 
  end

  def update_read_more_books

	read_more=params[:read_more]
	@user = User.find(params['user_id'])
        if read_more == "1"
		flash[:success] ="good"
		redirect_to @user
	elsif read_more == "0"
		flash[:success] ="bad"
		redirect_to @user
	else 
	    flash[:error] = "Une erreur c'est produite !" 
    	    redirect_to @user
	end
  end

  def create
    @user = User.new(params[:user])
    if @user.save
      connexion @user
      flash[:success] = "Bienvenue dans l'Application Projet!"
      redirect_to @user
    else
      @titre = "Inscription"
      render 'new'
    end
  end

  def edit
    @user = User.find(params[:id])
    @titre = "Édition profil"
  end

  def update
    @user = User.find(params[:id])
    if @user.update_attributes(params[:user])
      flash[:success] = "Profil actualisé."
      redirect_to @user
    else
      @titre = "Édition profil"
      render 'edit'
    end
  end

  private

    def authenticate
      deny_access unless connecter?
    end

    def correct_user
      @user = User.find(params[:id])
      redirect_to(root_path) unless current_user?(@user)
    end

    def admin_user
      redirect_to(root_path) unless current_user.try(:admin?)
    end

end
