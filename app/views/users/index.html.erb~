<h1>Tous les utilisateurs</h1>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, :size => 30 %>
      <%= link_to user.nom, user %>
      <% if current_user.admin? %>
	  | <%= button_to "supprimer", { action: "destroy", id: user.id },  method: :delete, style: {display: "inline"} , data: { confirm: "Are you sure?" } %>
      <% end %>
    </li>

  <% end %>
</ul>

<%= will_paginate %>
