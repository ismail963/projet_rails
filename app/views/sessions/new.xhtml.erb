<div class="panel">
	<div class="content">
		<div class="title"><h1>Identification</h1></div>
			<%= form_for(:session, :url => sessions_path) do |f| %>
			  <div class="contact-form mar-top">
			    <%= f.label :email, "Email" %>
			    <%= f.text_field :email %>
			    <%= f.label :password, "Mot de passe" %>
			    <%= f.password_field :password %><br/><br/>
			    <%= f.submit "S'identifier", :id => "id_submit" %>
			    <p>Pas encore inscrit ? <%= link_to "S'inscrire !", inscription_path %></p>
			  </div>
			<% end %>
		     

		     

	</div>
</div>
